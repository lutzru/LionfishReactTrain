# GraphQL schema example

# type Anlieferung
type Anlieferung {
  id: ID!
  date: String!
  lieferant: Lieferant!
  artikel: Artikel!
  status: CollectionDeliveryState!
}

type Artikel {
  id: ID!
  articleNumber: Int!
  name: String
}

type Lieferant {
  id: ID!
  lieferantenNummer: Int!
  name: String
}

enum CollectionDeliveryState {
  OFFEN
  IN_ARBEIT
  FERTIG
}

# query
type Query {
  # exampleQuery: Int!
  anlieferung(id: ID): Anlieferung
  anlieferungen(
    status: [CollectionDeliveryState]
    searchTerm: String
  ): [Anlieferung!]!
}

